{
  "name": "@csv-streamy/cli",
  "version": "0.0.0-development",
  "description": "Command line tool to handle a csv file.",
  "keywords": [
    "csv-streamy",
    "csv",
    "stream",
    "cli"
  ],
  "type": "module",
  "bin": {
    "csv": "./build/bin/index.js"
  },
  "main": "./build/bin/index.js",
  "types": "./build/bin/index.d.ts",
  "exports": {
    ".": {
      "types": "./build/bin/index.d.ts",
      "default": "./build/bin/index.js"
    }
  },
  "scripts": {
    "start": "node --loader ts-node/esm src/bin/index.ts",
    "start-bin": "node build/bin/index.js",
    "build-clean": "rimraf ./build",
    "build": "tsc",
    "watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch --coverage",
    "test-clear": "jest --clearCache",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "semantic-release": "semantic-release"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/keidrun/csv-stream.git",
    "directory": "packages/csv-stream-cli"
  },
  "author": "keidrun",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/keidrun/csv-stream/issues"
  },
  "homepage": "https://github.com/keidrun/csv-stream/tree/main/packages/csv-stream-cli#README.md",
  "dependencies": {
    "@csv-streamy/lib": "^1.0.2",
    "chalk": "^5.0.1",
    "commander": "^9.1.0"
  }
}
