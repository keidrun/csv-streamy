{
  "name": "@csv-stream/cli",
  "version": "0.0.0",
  "description": "Command line tool to handle a csv file.",
  "keywords": [
    "csv",
    "stream",
    "cli"
  ],
  "type": "module",
  "exports": "./build/index.js",
  "scripts": {
    "start": "node --loader ts-node/esm src/index.ts",
    "build": "tsc",
    "watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch --coverage",
    "test-clear": "jest --clearCache",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keidrun/csv-stream.git",
    "directory": "packages/csv-stream-cli"
  },
  "author": "keidrun",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/keidrun/csv-stream/issues"
  },
  "homepage": "https://github.com/keidrun/csv-stream#readme"
}
